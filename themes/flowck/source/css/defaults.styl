@import 'variables.styl'

*
	margin 0
	padding 0
	
::selection {
  background: #ffb7b7; /* WebKit/Blink Browsers */
}
::-moz-selection {
  background: #ffb7b7; /* Gecko Browsers */
}

div, section, article
	-webkit-transition width .5s
	-moz-transition width .5s
	-ms-transition width .5s
	transition width .5s

.wrap
	width 70%
	margin 0 auto

.main-content
	//height 94%
	
.main-content .wrap
	width 60%
	
a,
.main-footer .main-menu a
	color #666
	-webkit-transition color .5s
	-moz-transition color .5s
	-ms-transition color .5s
	transition color .5s
	
a:hover,
.main-footer .main-menu a:hover
	color MAIN-COLOR

.mobile-menu
	width 100%
	height 100%
	background-color #EEE
	top 0
	-webkit-transform translateX(-100%);
	-moz-transform translateX(-100%);
	-ms-transform translateX(-100%);
	transform translateX(-100%);
	transition -webkit-transform .2s
	transition -moz-transform .2s
	transition -ms-transform .2s
	transition transform .2s
	position fixed
	z-index 9998
		
.mobile-menu nav
	position absolute
	top 50%
	-webkit-transform translateY(-50%)
	-moz-transform translateY(-50%)
	-ms-transform translateY(-50%)
	transform translateY(-50%)

.mobile-menu ul
	list-style none
	
.mobile-menu ul li
	height 70px
	text-transform uppercase

.mobile-menu ul li a
	text-decoration none
	padding 20px 0
	
.mobile-menu-on
	-webkit-transform translateX(0);
	-moz-transform translateX(0);
	-ms-transform translateX(0);
	transform translateX(0);
	
.main-content p
	color TEXT-COLOR

.main-content .column
	height 100%
	float left
	position relative
	
.main-content article.home
	position absolute
	top 50%
	-webkit-transform translateY(-50%)
	-moz-transform translateY(-50%)
	-ms-transform translateY(-50%)
	transform translateY(-50%)

.main-content .profile 
	width 18%
	text-align center
	
.main-content .about-me
	width 30%
	position absolute
	
.main-content .me-walking
	width 20%
	position absolute
	right 0
	
.main-content .me-walking img
	width 100px
	
.main-content .aritcle-content
	height 500px
	
.main-content .page-title
	margin-bottom 15px
	
.main-content .page-title h1
	color #666
	font-size 30px
	
.main-content .page-content ul
	list-style none

/*Footer*/
.main-footer
	width 100%
	height 15px
	padding 10px 0
	position fixed
	bottom 0
	background-color #FFF
	
.main-footer .main-menu
	list-style none
	
.main-footer .main-menu li
	display inline
	margin-left 10px
	
.main-footer .main-menu li:first-child
	margin-left 0
		
.main-footer .main-menu a
	font-size 12px
	text-transform uppercase
	color #666
	text-decoration none