@import 'variables.styl'

body
	font-family: 'Raleway', sans-serif;
	background-color #FFF
	
// The Header	
.main-header
	width 100%
	height 40px
	padding-top 5px
	top 0
	position fixed
	z-index 9999
	background-color #FFF

.main-header .language
	float left
	display none
	
.main-header .menu-button
	display none
	float left
	font-size 25px
	color TEXT-COLOR
	margin-top 10px
	
.main-header .menu-button-on
	color MAIN-COLOR

.main-header .language .separator
	color #666
	font-size 13px

.main-header .social-icons
	width 20%
	height 100%
	position absolute
	right 0
	
.main-header a
	color #666
	text-decoration none
	
.main-header .language a
	font-size 12px
	
.main-header .social-icons a
	padding 0 10px
	
// The content: my profile, photo and name
.main-content .profile img
	width 150px
	border-radius 100px
	
.main-content .profile p
	color #444
	
// About-me
.content
	width 65%
	margin-top 100px
	float left

.about-me p
	font-size 20px
	color TEXT-COLOR
	
/*The blog*/
.blog-wrap
	width 100%
	margin 100px auto 0 auto

.post
	margin 30px 0

.post:first-child
	margin-top 0
	
.post:last-child
	margin-bottom 0

.post .post-metadata
	color #999
	font-size 14px
	margin-bottom 10px
	
.post .end-quote{
	font-style italic
	padding-left 10px
	border-left solid 4px MAIN-COLOR
}

hr
	border none
	width 100%
	height 1px
	background-color #DDD
	
.post .post-title
	font-size 28px
	margin-bottom 10px
	
.post .post-title a
	text-decoration none
	
.post .post-title a:hover
	color MAIN-COLOR

.post .post-content h2
	font-size 20px
	color TEXT-COLOR
	margin 15px 0
	
.post .post-content p,
.post .post-resume p
	color #333
	line-height 30px
	
.post .post-content ul
	margin-left 20px
	
.post .post-content .note
	border-left 5px solid MAIN-COLOR
	padding-left 10px
	color TEXT-COLOR
		
.post .post-content img:first-child,
.post .post-resume img:first-child
	margin-top 5px

.post .post-content .comment-count
	text-decoration none

.post .post-content p,
.post .post-content pre
	margin-bottom 15px

.post .post-content pre
	background-color #DDD
	padding 10px
	border-radius 3px
	
.pagination
	margin-top 30px
	
.pagination button
	background-color MAIN-COLOR
	height 30px
	border none
	border-radius 3px
	color #666
	padding 0 10px
	cursor pointer
	-webkit-transition background-color .5s
	-moz-transition background-color .5s
	-ms-transition background-color .5s
	transition background-color .5s
	
.pagination button:hover
	color #EEE
	background-color TEXT-COLOR
	
.pagination a:last-child
	margin-left 10px
	
/* Projects */
.projects
	width 100%

.project
	width 49%
	height 210px
	float left
	margin 0 0 10px 0
	
.project:nth-child(2n+0)
	float right
	
.project .img-container
	overflow hidden

.project img
	width 100%
	-webkit-transition transform .5s
	-moz-transition transform .5s
	-ms-transition transform .5s
	transition transform .5s

.project img:hover
	-webkit-transform scale(1.1, 1.1)
	-moz-transform scale(1.1, 1.1)
	-ms-transform scale(1.1, 1.1)
	transform scale(1.1, 1.1)

.project .project-title
	color TEXT-COLOR
	font-size 14px
	margin 10px 0 2px 0
	
.project .project-title a
	text-decoration none
	
.project .project-metadata
	font-size 13px
	color #999